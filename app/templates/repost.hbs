{{#modal-modal animateClose=animateClose closeModal='closeModal'}}
<div {{bind-attr class=":modal-dialog showSuccess:sm :text-left"}}>
	<div class="modal-content">		
		<div class="modal-header">
			<button {{action 'close'}} type="button" class="close btn-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h1 class="modal-title" id="myModalLabel">
				<span class="glyphicon glyphicon-retweet"></span> Repost
			</h1>
		</div>


		<div {{bind-attr class="showSuccess:show:hide :text-center"}}>
			<div class="container-fluid haul-edit">
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<h5>Repost Complete!</h5>
						<button {{action 'close'}} class="btn btn-default">close</button>
						<button {{action 'goToFeed'}} class="btn btn-default">go to my feed</button>
					</div>
				</div>
			</div>
		</div>


		<div {{bind-attr class="showRepost:show:hide"}}>	

			{{#form-for repost}}			
			<div class="container-fluid haul-edit">
				<div class="row">
					

					{{!-- //POST --}}
					<div class="col-md-8 col-sm-8 col-xs-10"> 

						{{partial "_edit_post"}}

						<div class="row">
							<div class="col-md-12 col-sm-12 col-xs-12 padding-top text-center">
		


								{{ladda-btn
									name='SAVE POST'
									class="display-inline"
									btnClasses='btn-post ladda-button'
									btnClick='savePost'
									dataSpinnerColor="white"
									spin=isProcessing
								}}

						        <button {{action 'close'}} type="button" class="btn btn-cancel btn-right" data-dismiss="modal">Cancel</button>					
							</div>
						</div>
					</div>

					<div class="col-md-4 col-sm-4 col-xs-2"> 
						{{!-- <h3>Product Card</h3> --}}
						{{!-- //PRODUCT --}}
						{{partial "_edit_product"}}

					</div>
				</div>
			</div> 
			{{/form-for}}

      	</div>
	</div>
</div>
{{/modal-modal}}