{{#modal-modal animateClose=animateClose closeModal='closeModal'}}
<div {{bind-attr class=":modal-dialog showSuccess:sm:lg :text-left"}}>
	<div class="modal-content">	

		{{!-- SUCCESS MESSAGE --}}
		<div {{bind-attr class="showSuccess:show:hide"}}>
			<div class="text-center edit-wrapper">
				<div class="edit-row">
					<div class="edit-col">
						<h5>Repost Complete!</h5>
						<button {{action 'close'}} class="btn btn-default">close</button>
						<button {{action 'goToFeed'}} class="btn btn-default">go to my feed</button>
					</div>
				</div>
			</div>
		</div>



		{{!-- REPOST FORM VIEW --}}
		<div {{bind-attr class="showSuccess:hide:show"}}>
			<nav>
				<div class="nav">
					<div class="logo rehaul">REHAUL</div>
					<button {{action 'cancel'}} class="nav-add-post">CANCEL</button>
				</div>
			</nav>

			{{partial "_modal_error_alert"}}

			<div class="text-center edit-wrapper">

				{{#form-for model}}
					

					<div class="edit-row">
						<div class="edit-col">

							<h2>Rehaul this post

								<small>You can write an awesome blog about this, or just post 
								what you see below.
								</small>

							</h2>

							{{input subject label="false" class="post-subject" }} 

							{{quill-editor 
								content=repostBody
								quillChange='quillChange' 
								requestContents=requestEditorContents
								selectedImages=selectedImages
								triggerResize=triggerEditorResize
							}} 

						</div>
					</div>	



				{{/form-for}} 

				<div class="edit-footer">
					<div class="edit-col">

						{{ladda-btn
							name='SAVE POST'
							class="display-inline"
							btnClasses='btn-next ladda-button'
							btnClick='savePost'
							spin=isProcessing
							dataSpinnerColor="white"
						}}

						<span {{action 'cancel'}} class="btn btn-cancel btn-right">
							Cancel
						</span>

					</div>
				</div>

			</div>	
		</div>
	</div>
</div>
{{/modal-modal}}