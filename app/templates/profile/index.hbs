<div class="container">  
	
	<div class="haul-content"> 

		<div class="row">
			
			<div class="col-md-12 col-sm-12 col-xs-12">

				<div class="padding-top margin-right text-center">
					
					{{#if isProfileOwner}}
					 	{{#link-to 'settings.profile'}}
						<button class="btn-edit-post">
							<i class="fa fa-cog"></i> Edit Your Bio
						</button><br/>
						{{/link-to}}
					{{/if}}

					{{#if user.bio}}
						<strong>Bio</strong><br/>
						{{sanitize-html user.bio "comment" ENV}}
					{{/if}}

					<br/>
					
					{{dm-btn to=user goToRoute='goToRoute' class="display-inline-block"}}

				</div>
			</div>
		</div>
	</div>
</div>


