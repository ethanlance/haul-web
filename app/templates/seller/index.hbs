{{user-header model=model  isSelected=true}}

{{!-- PAGE CONTENT --}}
<div class="container-fluid haul-content">   
	<div class="row">
		<div class="col-md-6 col-sm-8 col-xs-12">


		{{#each model.products}}
			
			<div class="row post">   
				<div class="col-md-12 col-sm-12 col-xs-12"> 

					<div class="citation">

						{{!-- <span class="glyphicon glyphicon-retweet"></span>
						<div class="name">{{collection.user.name}} <span class="rehauled">rehauled</span></div> --}}

						
						{{#link-to 'seller' collection }}
						<div class="image">
							{{ make-icon icon=product.user.icon isSmall=true}}
						</div>
						<div class="name">{{product.user.name}}</div>
						{{/link-to}}
						
					</div>

					<div class="article">
						{{!-- <h2>
							{{#link-to 'seller.product' collection product }}{{product.name}}{{/link-to}}
						</h2> --}}

						<div class="moment">{{format-date updated_at}}</div>
						
						<div class="product-image">
							{{!-- <div class="price">${{product.price}}</div> --}}
							{{#link-to 'seller.product' collection product.id product.slug }}
								<img class="img-responsive thumbnail" {{bind-attr src=product.image.small}}>
							{{/link-to}}
						</div>
					 	

					 	<div class="btn-wrapper">

					 		<button class="btn btn-default btn-buy">
								buy
							</button>

						 	{{like-btn product=product class="display-inline" }}

						 	{{#link-to 'seller.product' collection product.id product.slug }}
						 		{{comment-btn anchor='false' itemObject=this class="display-inline" }}
						 	{{/link-to}}

							

						 	{{!-- EDIT --}}
						 	{{#link-to 'seller.product.edit' collection product.id product.slug }}
							<button class="btn btn-default">
								{{#if ../../isProfileOwner}}
								edit
								{{else}}
								<span class="glyphicon glyphicon-retweet"></span>
								{{/if}}
							</button>
							{{/link-to}} 
						</div>
					</div>
				</div>
			</div>	

		{{/each}} 
		 







	{{#unless isProfileOwner}} 
	{{#unless model.products }}
		<p class="padding-top text-center font-weak">{{user.name}} has no posts.</p>
	{{/unless}} 
	{{/unless}}


	
	{{#if isProfileOwner}} 
		{{#unless model.products }} 
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12  text-center">
				
				<h3>Welcome to Haul.<br/><small>Let's get started!</small></h3>		
				
				{{#link-to 'product-new'}}
				<button class="btn btn-default">
					<span class="glyphicon glyphicon-camera"></span><br/>
					Post Something For Sale
				</button>
				{{/link-to}} 
		
			</div>	
		</div> 
	{{/unless}}
	{{/if}}  
		 




		 
		</div> 
		<div class="col-md-6 col-sm-4 col-xs-12">

			{{!-- Side content --}}

		</div>
	</div>
</div>














