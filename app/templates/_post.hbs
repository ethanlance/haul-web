

<div class="post">   
	<div class="citation">
	
		{{#unless-equal param1=user.id param2=product_user.id}}
		<span class="glyphicon glyphicon-retweet"></span>
		<div class="name">
			{{#link-to 'profile' user }}
				@{{user.username}}
			{{/link-to}}
			<span class="rehauled">reposted</span>
		</div>
		{{/unless-equal}}


		{{#link-to 'profile' product_user.username }}
		<div class="image">
			{{ make-icon icon=product_user.icon isSmall=true }}
		</div>
		<div class="name">@{{product_user.username}}</div>
		{{/link-to}}
		
	</div>

	<div class="article">
		 <h2>
			{{#link-to 'profile.post' user post_id post_slug }}{{subject}}{{/link-to}}
		</h2> 

		<div class="moment">{{format-date updated_at}}</div>
		
		<div class="product-image">
			<div class="price">${{product_price}}</div>
			{{#link-to 'profile.post' user post_id post_slug }}
				<img class="img-responsive" {{bind-attr src=image.medium}}>
			{{/link-to}}
		

		 	<div class="btn-wrapper">

		 		<button class="btn btn-default btn-buy">
					buy
				</button>

			 	{{like-btn post=this class="display-inline" }}

			 	{{#link-to 'profile.post' user post_id post_slug }}
			 		{{comment-btn linkOff='true' itemObject=this class="display-inline" }}
			 	{{/link-to}}

				
				<button {{action 'openModal' 'repost' this}} class="btn btn-default">
					<span class="glyphicon glyphicon-retweet"></span>
				</button>
			 	
			</div>
		</div>
	</div> 
</div>