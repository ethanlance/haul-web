


{{!-- PAGE CONTENT --}}
<div class="container-fluid haul-content">   
	<div class="row">
		<div class="col-md-3 col-sm-2 col-xs-12"></div>
		<div class="col-md-6 col-sm-8 col-xs-12">
	

		{{!-- //LOADING CONTENT --}}
		{{#if loading }}
			{{partial '_spinner'}}
		{{/if}}


		{{!-- //CONTENT --}}
		<div {{bind-attr class="galleryView:gallery"}}>
		{{#each sortedContent}}
			{{partial 'post'}}	
		{{/each}}
		</div>
		{{#infinite-scroll content=pagedContent hasMore=paginateHasMore }}
			<span>Loading...</span>	
		{{/infinite-scroll}}


		{{!-- //NO CONTENT CTA --}}
		{{#unless loading }} 
		{{#unless pagedContent }} 
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12 text-center cta-welcome">
				
				<h3>Welcome to Haul.<br/><small>Let's get started!</small></h3>		
				
				{{#link-to 'new-post'}}
				<button class="btn btn-default">
					<i class="fa fa-camera-retro fa-lg"></i> Post Something For Sale
				</button>
				{{/link-to}} 
		
			</div>	
		</div>  
		{{/unless}}
		{{/unless}}
		 

		</div> 
		<div class="col-md-3 col-sm-4 col-xs-12"></div>
	</div>
</div>
