

<div class="curated">


<header class="basic">
<div class="container">	
	<div class="curated-header">

		<h1>Haul {{category}}</h1>

		<div>Curated by haul staff member {{user.display_name}}.  The posts below are from Haul users.</div>
	</div>

</div>
</header>



<div class="container no-margins">
	<div class="haul-content">

		<div class="hamburger-right-side">

			{{!-- HAMBURGER ICON, WHEN LEFT NAV IS COLAPSED --}}
			{{!-- HAMBURGER ICON, WHEN LEFT NAV IS COLAPSED --}}
			{{!-- HAMBURGER ICON, WHEN LEFT NAV IS COLAPSED --}}
			{{!-- HAMBURGER ICON, WHEN LEFT NAV IS COLAPSED --}}
			{{hamburger-menu}}
			<input type="checkbox" id="hamburger-trigger" class="hamburger" />
			<label for="hamburger-trigger" class="with-page-header  fa fa-bars"></label>
		

			{{!-- FLUID LEFT --}}
			{{!-- FLUID LEFT --}}
			{{!-- FLUID LEFT --}}
			{{!-- FLUID LEFT --}}
			<div class="haul-fluid-left" data-info="haul-fluid-left"> 
				
				<div class="haul-fluid-content center-on-collapse padding-top grid-spacing">

					<ul class="discover-categories">
						<li class="featured">{{#link-to "discover"}}featured{{/link-to}}</li>
					{{#each cat in categories}}
						<li {{bind-attr class="cat"}}>{{#link-to cat}}{{cat}}{{/link-to}}</li>
					{{/each}}
					</ul>
						

					{{#unless sortedContent}}
						{{loading-bar turnLoadingBarOn='true'}}
					{{/unless}}

			 
					{{!-- //CONTENT --}}
					{{#each like in sortedContent}}
						{{#with like.post as post }}
							
							{{render '_grid_post' post}}
						
						{{/with}}
					{{/each}}

					
					{{#infinite-scroll content=pagedContent hasMore=paginateHasMore }}
						<i class="fa fa-circle-o-notch fa-spin"></i>
					{{/infinite-scroll}}
					
			    
				</div> 
			</div>



			{{!-- FIXED RIGHT --}}
			{{!-- FIXED RIGHT --}}
			{{!-- FIXED RIGHT --}}
			{{!-- FIXED RIGHT --}}
			<div class="haul-fixed-right with-page-header">
				<div class="haul-menu-content">

					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{onboarding-userstofollow usernameFilter=usernameFilter}}

					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{!-- ONBOARDING --}}
					{{onboarding-tags goToRoute='goToRoute'}}

				</div>
			</div>
		</div>
	</div>
</div>

</div>