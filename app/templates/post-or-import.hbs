{{#modal-modal animateClose=animateClose closeModal='closeModal' scrollToTop=scrollToTop}}
<div {{bind-attr class=":modal-dialog :lg :text-left"}}>
	<div class="modal-content">

		{{partial "_modal_nav"}}
	
		{{!-- POST FORM --}}
		<div class="text-center edit-wrapper">
			<div class="edit-row">
				<div class="edit-col">


					<div class="row">
						<div class="col-md-6 col-sm-12 col-xs-12">
							
							<h2>Import a link</h2>

							{{import-link-btn 
								openModal='openModal' btn-text="IMPORT A LINK"  class="display-inline"}}

						</div>


						<div class="col-md-6 col-sm-12 col-xs-12">

							<h2>Add a new post</h2>

							{{new-post-btn 
								openModal='openModal' btn-text="ADD A NEW POST"  class="display-inline"}}

						</div>
					</div>	
				</div>
			</div>
		</div>
	</div>
</div>
{{/modal-modal}}		
				 
		