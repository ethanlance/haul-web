{{#modal-modal animateClose=animateClose closeModal='closeModal' scrollToTop=scrollToTop}}
<div {{bind-attr class=":modal-dialog :lg :text-left"}}>
	<div class="modal-content">

		{{partial "_modal_nav"}}

		{{partial "_modal_error_alert"}}


		{{!-- SUCCESS MESSAGE --}}
		{{!-- SUCCESS MESSAGE --}}
		<div {{bind-attr class=":show_three :hide"}}>
			<div class="text-center edit-wrapper">
				<div class="edit-row">
					<div class="edit-col">


					{{#if needsSellerAccount}}

						<h2>
							Congrats!  Your post went live!

							<small>Now setup your seller account so people can give you money!</small>

						</h2>

						<button {{action 'goToPost'}} class="btn btn-default">skip for now</button>
						<button class="btn btn-default">
							<a data-toggle="collapse" 
								data-parent="#accordion" 
								href="#collapseSellerForm" 
								aria-expanded="false" 
								aria-controls="collapseSellerForm">yep, let's do it</a>
						</button>

						<div id="collapseSellerForm" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
							{{seller-form sellerAccountSaved='sellerAccountSaved'}}
						</div>

					{{else}}

						
						<h2>
							Congrats!  Your post went live!

							<small>You can edit it anytime you like.</small>

						</h2>

						<button {{action 'goToPost'}} class="btn btn-default">go to your post</button>

					{{/if}}


						
					</div>
				</div>
			</div>
		</div>

	
		{{!-- POST FORM --}}
		<div class="text-center edit-wrapper">



			{{#form-for model}}
			<div {{bind-attr class=":show_one  "}}>
				<div class="edit-row">
					<div class="edit-col">

						<h2>Post something to sell.</h2>

						{{#image-picker 
							images=userImages
							selectedImages=selectedImages
							refresh='refresh'
							imageClick='imageClick' 
							imageDelete='imageDelete'
							
							showImagePicker=showImagePicker
						}} 
							{{view 'sortable' content=selectedImages}}
						{{/image-picker}}

						{{#if showImageError}}
							<span class="has-error help-block">A product needs at least one image</span>
						{{/if}}

					</div>
				</div>

				

				<div class="edit-row border">		
					<div class="edit-col">
						<h2>What is this?
							<small>Name this product. For example "1968 Aston Martin"</small>
						</h2> 

						{{input-field product_name class="form-control"}}
						{{#if showErrors}}
							<span class="has-error help-block">{{error-field product_name}}</span>
						{{/if}}

					</div>
				</div>



				<div class="edit-row border">
					<div class="edit-col">
						<h2>What are the specs?
							<small>Add one simple fact per line. For example "Color: Silver"</small>
						</h2>

						{{description-input descriptionChange='descriptionChange'}}

						{{#if showErrors}}
							<span class="has-error help-block">{{error-field product_description}}</span>
						{{/if}}

					</div>
				</div>



				<div class="edit-row border">
					<div class="edit-col">
						<h2>How much do you want to sell this for?</h2>	

						{{input-field product_price label="false" class="form-control input-sm"}}
						{{#if showErrors}}
							<span class="has-error help-block">{{error-field product_price}}</span>
						{{/if}}
					</div>
				</div>




				<div class="edit-row border">
					<div class="edit-col">
						<h2>Add shipping &amp; handling?
							<small>We only support flat rates for now. For example "$5"</small>
						</h2>
						{{input-field product_shipping label="false" class="form-control input-sm"}}
						{{#if showErrors}}
							<span class="has-error help-block">{{error-field product_shipping}}</span>
						{{/if}}

					</div>
				</div>




				<div class="edit-row border">
					<div class="edit-col">

						<h2>Tag it.
							<small>Adding tags will help promote your product. Separate multiple tags with a comma. For example "car, sportscar"</small>
						</h2>
						
						{{input-field tags class="form-control"}}

					</div>
				</div>


				<div class="edit-footer">
					<div class="edit-col">			
						
						{{ladda-btn
							name='NEXT'
							class="display-inline"
							btnClasses='btn-next ladda-button'
							btnClick='next'
							spin=isProcessingNext
							dataSpinnerColor="white"
						}}

						<span {{action 'cancel'}} class="btn btn-cancel btn-right">
							Cancel
						</span>

					</div>
				</div>
			</div>


			<div {{bind-attr class=":show_two :hide"}}>

				<div class="edit-row">
					<div class="edit-col">

						<h2>Next, write a post about this.

							<small>Just skip this section if you are happy with the blog post
							we've created for you below.</small>

						</h2>

						{{input subject label="false" class="post-subject" }} 

						{{quill-editor 
							setEditorImgSrc=setEditorImgSrc
							setEditorText=setEditorText 
							content=editorialForQuill 
							quillChange='quillChange' 
							requestContents=requestEditorContents
							selectedImages=selectedImages
							triggerResize=triggerEditorResize
						}} 

					</div>
				</div>

				<div class="edit-footer">
					<div class="edit-col">			

						<span {{action 'back'}} class="btn btn-cancel btn-left">
							Back
						</span>

						{{ladda-btn
							name='SAVE POST'
							class="display-inline"
							btnClasses='btn-next ladda-button'
							btnClick='savePost'
							spin=isProcessingSavePost
							dataSpinnerColor="white"
						}}
							
						<span {{action 'cancel'}} class="btn btn-cancel btn-right">
							Cancel
						</span>

					</div>
				</div>
			</div>
			{{/form-for}}
		</div>
	</div>
</div>
{{/modal-modal}}		
				 
		