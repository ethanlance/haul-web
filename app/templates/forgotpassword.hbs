
    <div class="container">
        <div class="row">
        	<div class="col-md-4 col-sm-2 col-xs-2"></div>
			<div class="col-md-4 col-sm-8 col-xs-8 form-box">


			{{#if emailSent}}
				<h2>
					Please check your email inbox.<br/>
					<small>We sent you instructions to reset your password.</small>
				</h2>

			{{else}}
          	

				<form>

					<div class="form-group">
						<h2>
							Forgot Your Password?<br/>
							<small>Enter your email below</small>
						</h2>
					</div> 


				{{#if error409}}
			    	<div class="alert">Oops, that email address was not found.</div>
			  	{{/if}} 

				{{#if error}}
			    	<div class="alert">Oh no! Something went wrong.</div>
			  	{{/if}}   


				  	<div class="form-group"> 
			      		{{input-field email focus-in="focus" type="text" class="form-control" placeholder="Type your email address"}}
			      	</div> 

					<div class="form-group">
				  		<button class="btn btn-primary btn-block" {{action "submit"}}>REQUEST</button>
				  	</div>

				</form> 
			{{/if}}





			</div>
			<div class="col-md-4 col-sm-2 col-xs-2"></div>
        </div>
    </div>