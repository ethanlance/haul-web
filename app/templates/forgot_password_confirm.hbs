{{super-slides}}
<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">

			{{#if emailSent}}
				<h2 class="form-signin-heading">
					Reset Your Password
				</h2>

			{{else}}
            	

				<div class="form-group">
					<h2 class="form-signin-heading">
						Change Your Password<br/> 
					</h2>
				</div> 
				
				{{#if error}}
					<div class="alert">Oops, that did not work out.</div>
				{{/if}}

				{{#form-for model wrapper="bs3-wrapper"}}
	 			<div class="form-group">	
			      		{{input ticket_id as="hidden"}}
			      		{{input user_id as="hidden"}}
					</div> 
		 
			 		<div class="form-group">	
			 			{{input password placeholder="New Password"}} 
					</div>  

					<div class="form-group">
				  		{{submit class="btn btn-primary btn-block"}}
				  	</div>

				{{/form-for}} 

				
			{{/if}}

			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>