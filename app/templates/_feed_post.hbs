


<div class="feed-post hide" {{bind-attr id=post.id}}>

	<div class="post-owner">

		{{#link-to 'profile' post.user.username }}{{make-icon icon=post.user.icon}}{{/link-to}}

		<div class="post-owner-details">
			<span class="name">{{#link-to 'profile' post.user.username }}{{post.user.get_display_name}}{{/link-to}}</span>
			<span class="username">{{#link-to 'profile' post.user.username }}@{{post.user.username}}{{/link-to}}</span>
			<div class="moment">{{ format-moment post.created_at }}</div> 
		</div>
	</div>


	<h1 class="post-title">
		{{#link-to 'profile.post' 
			post.user.username post.post_id post.post_slug 
			(query-params anchor="null" reply="null")}}{{ post.subject }}{{/link-to}}
	</h1>


	{{!-- //REPOST --}}
	{{#if post.repost_id}}
	<div class="repost-citations">
		<i class="fa fa-retweet"></i>
		{{make-icon icon=post.repost_user.icon}}
		<span class="name">{{post.repost_user.get_display_name}}'s </span>
		<span class="title"> original post
			{{#link-to 'profile.post'
				post.repost.user.username 
				post.repost.post_id 
				post.repost.post_slug}}{{post.repost.subject}}{{/link-to}}
		</span>
	</div>
	{{/if}}

	<div class="post-content">
		<div class="post-image">
		
			{{#link-to 'profile.post' post.user.username post.post_id post.post_slug (query-params anchor="null" reply="null")}}
				{{#if post.image.large}}{{image-loader src=post.image.large unHideId=post.id}}{{/if}}
			{{/link-to}}


			<div class="post-image-overlay">	
				
				{{#link-to 'profile.post' post.user.username post.post_id post.post_slug (query-params anchor="null" reply="null")}}
				<div class="post-info">

					<div class="product-status">
						{{post.product_status_text}}
						<div class="product-price">${{post.product_price}}</div> 
					</div>

					<div class="product-deets">
						<div class="product-title">{{post.post.product_name}}</div>

						

						{{!-- CURATED or SELLING --}}
						{{!-- CURATED or SELLING --}}
						{{!-- CURATED or SELLING --}}
						{{!-- CURATED or SELLING --}}
						
						{{#if post.postOwnerIsSeller}}
							<div class="product-owner"><span class="pre-text">For sale by</span> {{post.product_user.get_display_name}}</div>
						{{else}}
							<div class="product-owner"><span class="pre-text">Found by</span> {{post.product_user.get_display_name}}</div>
						{{/if}}
					</div>

					

				</div>
				{{/link-to}}

			</div>

		</div>


		<div class="post-bottom-cap">
			
			
				


			<div class="post-buttons">

				{{like-btn post=post openModal='openModal' class="display-inline"}}	 
				 	
				{{comment-btn post=post class="display-inline" gotolink='true' }}

				{{repost-btn post=post openModal='openModal' class="display-inline"}}

				{{buy-btn post=post allowExternalLink=allowExternalLink class="display-inline btn-right btn-buy-this" }}
			</div>

		</div>
	</div>
</div>