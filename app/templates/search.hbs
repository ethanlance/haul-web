{{header-site goToRoute='goToRoute'}}

<div class="container-fluid haul-content">
	<div class="row">
	 	<div class="col-md-12 col-sm-12 col-xs-12 text-center">
	    	<h1 {{bind-attr class="showResults:show:hide"}}>{{{typeText}}}  <b>{{queryText}}</b></h1>
	    </div> 
	</div>
  
	<div class="row">
		<div class="col-md-3 col-sm-2 col-xs-12"></div>
		<div class="col-md-6 col-sm-8 col-xs-12">


{{!-- //LOADING CONTENT --}}
		{{#if loading }}
			{{partial '_spinner'}}
		{{/if}}


		{{!-- //CONTENT --}}
		<div {{bind-attr class="galleryView:gallery"}}>
		
		 	

		{{#if currentTypeIsHashtag }}
		 	{{#each item in sortedContent}}
		 		<ul class="search-hashtag">
		 			<li {{action 'clickHashtag' item}}><span class="search-hashtag-tag">#{{item.name}}</span> <span class="search-hashtag-total">{{item.total}} posts</span></li>
		 		</ul>
			{{/each}}

		{{else}}
		 	{{#each item in sortedContent}}
			<div class="post">   
				<div class="article">
					
					<h2>
						{{#link-to 'profile.post' item.user.username item.post (query-params anchor="null")}}{{item.subject}}{{/link-to}}
					</h2> 

					
					<div class="product-image">
						{{#link-to 'profile.post' item.user.username item.post (query-params anchor="null")}}
							<img class="img-responsive" {{bind-attr src=item.image.medium}}>
						{{/link-to}}
					</div>
					 	
				</div> 
			</div>
			{{/each}}
		{{/if}}

 
		</div>
		{{#infinite-scroll content=pagedContent hasMore=paginateHasMore }}
			<span>Loading...</span>	
		{{/infinite-scroll}}
	    
		</div> 
		<div class="col-md-3 col-sm-4 col-xs-12"></div>
	</div>
</div>