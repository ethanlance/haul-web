<h1>Change Username</h1> 

<div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12">
 
        
       
       {{#form-for model wrapper="bs3-wrapper"}}
        <div >
            {{input username canShowValidationError=showErrors placeholder=""}}
        </div> 
        {{/form-for}}

        <div {{bind-attr class="showErrorMessage:show:hide :errors"}}>
            <span class="alert">{{{errorMessage}}}</span>
        </div>

        <div>

            {{ladda-btn 
                name='change'
                btnClasses='btn btn-primary ladda-button btn-right'
                btnClick='btnClick'
                spin=isProcessing
            }}

        </div>
		
		
    </div> 
</div>