{{header-site goToRoute='goToRoute'}}

<div class="container-fluid haul-content no-section-nav">  
	<div class="row">
		<div class="col-md-1 col-sm-1 col-xs-12"></div>
		<div class="col-md-10 col-sm-10 col-xs-12">

				<h1>@Mentions</h1>




					{{!-- //LOADING CONTENT --}}
					{{#if loading }}
						{{partial '_spinner'}}
					{{/if}}



			<div {{bind-attr class="loading:hide:show :mentions"}}>


				<div class="comments">
					

					{{!-- //CONTENT --}}					
					{{#each sortedContent}}
					<div {{bind-attr class=":row :comment read:read"}}>
						<div class="col-md-10 col-sm-10 col-xs-9">

							Re: {{#link-to 'profile.post' subject.user subject  (query-params anchor="comments")}}{{subject.subject}}{{/link-to}}	

							<div class="image">
								{{make-icon icon=subject.image.small isSmall=true}}
							</div>
							<div class="single-comment">
								
								<div class="image padding-top">
									{{#link-to 'profile' user }}{{ make-icon icon=user.icon isSmall=true}}{{/link-to}}
								</div>
								<div class="single-comment padding-top">
									
									<span class="name">{{#link-to 'profile' user }}{{user.name}}{{/link-to}}</span> said:

									<br/>
									
									<span class="comment-string">{{sanitize-html comment "comment"}}</span>
									
									<span class="moment">{{ format-date created_at }}</span>
								</div>

							</div>
						</div>


						<div class="col-md-2 col-sm-2 col-xs-3"> 

							{{#unless read}}
								{{ladda-btn
									name='Mark Read'
									class="display-inline"
									btnClasses='btn btn-default btn-sm btn-right  ladda-button'
									btnClick='markRead'
									btnClickObj=this
									spin=isProcessing
								}}
							{{/unless}}

							{{#link-to 'profile.post' subject.user subject  (query-params anchor="comments")}}	
								<button class="btn btn-default btn-sm btn-right margin-top">Reply</button> 
							{{/link-to}}

						</div>

					</div>
					{{/each}}
					{{#infinite-scroll content=pagedContent hasMore=paginateHasMore }}
						<span>Loading...</span>	
					{{/infinite-scroll}}
					

					</div>
				</div>
			</div>
		</div>
		<div class="col-md-1 col-sm-1 col-xs-12"></div>
	</div>
</div>