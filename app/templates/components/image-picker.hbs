
<div class="haulDropZone"> 

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="upload-images dropzone-preview">
				{{yield}}
				<ul id="uploading"></ul>
			</div> 
		</div>
	</div>

	<div {{bind-attr class=":row showUploader:show:hide"}}>
		<div class="col-md-12 col-sm-12 col-xs-12 ">

			<div id="haul-dropzone-filebutton"></div> 

			<div id='haul-dropzone-browse' class="image-drop dashed">
				<i class="fa fa-plus"></i>
				<i class="fa fa-camera fa-1x"></i>

				{{#if selectedImages}}
					<span>Add more photos</span>
				{{else}}
					<div {{bind-attr class="canUploadMultiple:show:hide"}}>Upload one or more photos</div>
					<div {{bind-attr class="canUploadMultiple:hide:show"}}>Upload one photo</div>
				{{/if}}
			</div>
		</div>	
	</div>
</div> 