
<div class="row padding-top comments-section">
	<div class="col-md-12 col-sm-12 col-xs-12">
		
		<div class="comment-section-nav">
			<span class="comment-count">{{totalComments}} Comments</span>
			<span class="likes-count">{{totalLikes}} Likes</span>
		</div>


		{{!-- COMMENT FORM --}}
		<div class="row comment-box" id="leaveComment">
			<div class="col-md-12 col-sm-12 col-xs-12">
			
			
			{{#form-for model}}

				<img class="profile-image" {{bind-attr src=session.currentUser.icon}}>
				


				<div class="comment-input">
					{{input comment as="text" placeholder="Write a comment..." class="commentbox"  label="false"   }}
					
		    		<div {{bind-attr class="showServerErrors:show:hide :alert"}}>{{{serverErrorMessage}}}</div> 
				</div>


				<div {{bind-attr class=":comment-submit showSubmitCommentButton:visible:invisible"}}>
						
					{{ladda-btn 
						class="primary display-inline"
						name='Post Comment'
						btnClasses='btn btn-default ladda-button '
						btnClick='submit'
						spin=isProcessing
					}}

				</div>
				
			{{/form-for}}

	
			
			</div>
		</div> 



		{{!-- COMMENTS --}}
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">


				{{#each item in sortedComments }}
				<div class="comment-section-row">
						
					<button {{action "delete" item}} {{bind-attr class=":btn :btn-default :btn-sm :btn-delete item.canDelete:show:hide"}}>
						<span class="glyphicon glyphicon-remove"></span>
					</button>
					
					
					{{#link-to 'profile' item.user.username }}<img class="profile-image" {{bind-attr src=item.user.icon}}>{{/link-to}}

					<div class="comment-section-comment">
						<span class="name">{{#link-to 'profile' item.user.username }}{{item.user.name}}{{/link-to}}</span>
						<span class="username">{{#link-to 'profile' item.user.username }}@{{item.user.username}}{{/link-to}}</span>
						<div class="moment">{{ format-moment item.created_at }}</div>
						<div class="comment">{{sanitizehtml-andtag item.comment "comment" ENV}}</div>
					</div>
				</div>
				{{/each}}
		
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12 text-center">

				<button {{action 'fetchMore'}} {{bind-attr class=":btn :btn-default :load-more-btn hasMore::disabled"}}>LOAD MORE</button>

			</div>
		</div>
	</div>
</div>
