<nav>
	<div class="logo">
		{{#link-to "home"}}Haul{{/link-to}}
	</div>

	<div class="container-fluid">

	{{#if  session.isAuthenticated }}

		{{#link-to 'home' }}
		<button class="btn btn-default btn-home">
			<span class="glyphicon glyphicon-home"></span> 
		</button> 
		{{/link-to}}

		
		{{#link-to 'new-post' }}
		<button class=" btn btn-default btn-sell">
			<span class="glyphicon glyphicon-camera"></span>
			Post
		</button> 
		{{/link-to}}
		

		

		{{typeahead-search class="display-inline" goToRoute='goToRoute'}}



		{{#if session.currentUser.username }}
		<div class="btn-group btn-profile">
			{{#link-to 'profile' session.currentUser }}
			<button type="button" class="btn btn-default">
				{{ make-icon icon=session.currentUser.icon isSmall=true}} 
			</button>
			{{/link-to}}
		
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
			  <span class="glyphicon glyphicon-cog"></span>
			</button>
			<ul class="dropdown-menu dropdown-menu-right" role="menu">
				<li>{{#link-to 'profile' session.currentUser }}Profile{{/link-to}}</li>
				
