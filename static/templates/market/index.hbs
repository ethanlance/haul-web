
{{!-- STORE TEMPLATE --}}


<div class="haul-container-fluid padding-bottom">
	<div class="row">
		<div class="col-md-12">
	    	<div class="row">
		    	<div class="col-md-9 col-sm-9 col-xs-12 haul-profile-header haul-font">

					<div class="media">

					{{#link-to "seller" user class="pull-left"}}
					  	<div class="profile-circular-mask">
					  	{{#if user.picture}}
					    	<img {{bind-attr src=user.picture}}> 
					    {{/if}}
					    </div>
					{{/link-to}}

					  	<div class="media-body">
					     	<h1 class="media-heading">{{market.name}}</h1>

					     	<p>{{market.description}}</p>

					     	<h5>{{#link-to "seller" market.user}}by {{market.user.name}}{{/link-to}}</h5>
					  	</div>
					</div> 
		    	</div> 
		    </div>
		</div>
	</div>
</div>	


{{!-- Empty Store --}}

{{#if isProfileOwner }}
{{#if market.product }}{{else}}
<div class="container">
	<div class="jumbotron"> 
			
							
		<h2>Your store is empty.</h2>

		<p>You can place any items in your store. Even things from other sellers.  If the product sells from your store, you earn a commission. <small>Psst... learn more from our <a>FAQ</a></small></p>

		<p>Pick great products!</p>

					 
	</div>
</div>


<div class="container">

	{{!-- CREATE ITEM --}}

	<div class="haul-grid-li">	
		<div class="sell"> 
			{{#link-to 'seller.new-product' currentUser.slug }}
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					<div class="glyphicon glyphicon-plus-sign"></div><br/>
					Create an Item
				</div>
			</div>
			{{/link-to}}
		</div>
	</div>
 	
	<div class="box">
		<div class="box-inside">
			<h3>Or Browse Below For Ideas.</h3>
			<h4>Add Items To Your Store.</h4>
			<h5>Be A Tasetmaker.</h5>
		</div> 
	</div> 
	<div class="clearfix"></div>

	{{!-- BROWSE POPULAR STORES & ITEMS --}}


	{{#each fakeProducts}}
	<div class="haul-grid-li"> 
		<img class="thumbnail" {{bind-attr src=image}}>
		
		<div class="info">		
	 	  	<div class="price"> $200</div>   
		</div>		
 	</div>
 	{{/each}}

</div>

{{/if}}
{{/if}}



{{!-- STORE PRODUCTS --}}

 
<div class="container">

    {{#each market.products}}
    
    	{{#link-to 'product' this }}
    	<div class="haul-grid-li"> 

				<img class="thumbnail" {{bind-attr src=image.small}}>

				{{#if sold}}
					<div class="sold">Sold</div>
				{{/if}}
				
				<div class="info">		
			 	  	<div class="price"> ${{price}}</div>   
				</div>

				{{editorial}}
			
	 	</div>
	 	{{/link-to}}	
	{{/each}}
	
</div> 



