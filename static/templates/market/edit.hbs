<div class="container">

	<div class="row padding-top">
		<div class="col-md-6 col-sm-6 col-xs-6 vcenter">
			<h4>Create Your Store</h4>
		</div>
	</div>


	{{#form-for model wrapper="bs3-wrapper"}}
		<div class="row">
			<div class="col-md-12"> 	
				<div class="row">
					<div class="col-md-8 col-sm-8 col-xs-12"> 
						<label>Name:</label>
						{{input name}} 
					</div>
				</div>
				<div class="row">
					<div class="col-md-8 col-sm-8 col-xs-12"> 
						<label>Description: (max 500)</label>
						{{input description as="text" }}
					</div> 
				</div>
				<div class="row">
					<div class="col-md-8 col-sm-8 col-xs-12">
					{{submit "Save" class="btn btn-primary"}}
					</div>
				</div>
			</div>
		</div>
	{{/form-for}}
</div>