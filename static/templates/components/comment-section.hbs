<div class="row">
	<div class="col-md-12 haul-buy-card">
		<div class="row">
			<div class="col-md-12">
			<h4>Comments</h4>


			{{#form-for model wrapper="bs3-wrapper"}}
				
				{{input comment as="text" canShowValidationError=showErrors placeholder="Leave a comment."}}
				
				<div class="text-right padding-top">
					
					{{ladda-btn
						name='Post Comment'
						class="display-inline"
						btnClasses='btn btn-primary ladda-button'
						btnClick='submit'
						spin=isProcessing
					}}

				</div>
			{{/form-for}}







				{{#each sortedComments }}

					<div class="media">
						 
							{{ make-icon icon=user.icon isSmall=true class="pull-left"}}
						 
						<div class="media-body">

							<strong>{{ user.name }}</strong>

							<br/>

							{{ breaklines comment }} 

							<br/>

							<span class="small">{{ format-date created_at }}</span>

							{{#if this.canDelete }}
							<div class="pull-right">
								<button {{action 'delete' this}} class="btn btn-default btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
							</div>
							{{/if}}
						</div>
					</div>

				{{/each}}

			</div>
		</div>
	</div>
</div>