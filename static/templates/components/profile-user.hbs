		{{#if  user }}
 
		<div class="btn-group navbar-profile">
		
			<button {{action "clickProfile" user.id}} type="button" class="btn btn-default">
				
				<img {{bind-attr src=user.picture}}> 
				<span class="profile-name">{{#link-to "seller" user.id }}{{ user.name }}{{/link-to}}</span>
		  		
			</button>

		  <div class="btn-group">
		    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		      <span class="glyphicon glyphicon-cog"></span>
		    </button>
		    <ul class="dropdown-menu" role="menu">
				<li>{{#link-to 'seller.new-product' user.slug }}Sell Something{{/link-to}}</li> 
				
				<li class="divider"></li> 
				<li>{{#link-to 'logout'}}Logout{{/link-to}}</li>
		    </ul>
		  </div>
		</div> 

		{{else}}


		<div class="navbar-profile">
			{{#link-to 'signup'}}<button type="button" class="btn btn-default signup">SIGNUP</button>{{/link-to}}
			{{#link-to 'login'}}<button type="button" class="btn btn-default">LOGIN</button>{{/link-to}}
		</div>

		{{/if}}