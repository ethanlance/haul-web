{{!-- DISPLAY ONE IMAGE --}}

<div class="haul-grid-thumbs"> 
	
	<div class="delete text-right">
		<button {{action "imageDelete" image}} type="button" class="btn btn-default btn-sm btn-no-radius">
			<span class="glyphicon glyphicon-trash"></span>
		</button>
	</div>

	<img {{action "imageClick" image}} class="thumbnail haul-thumb" {{bind-attr src=image.thumb}}>
</div> 



{{!-- DELETE IMAGE CONFIRMATION MODAL  --}}

<div class="modal fade bs-example-modal-sm in" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" {{bind-attr style="deleteModalStyle"}}>
	<div class="modal-dialog modal-sm">
		<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="mySmallModalLabel">Delete Image?<br/>This cannot be undone.</h4>
		</div>
		<div class="modal-body"> 
			<p class="text-center">
				<button {{action 'imageDeleteCancel' image}} class="btn btn-default">Cancel</button>
				<button {{action 'imageDeleteProceed' image}} class="btn btn-danger">Yes, Delete</button>
			</p>
		</div>
		</div>
	</div>
</div>