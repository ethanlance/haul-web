<div class="box-rigid text-center box-soft">
	
  	<div class="profile-circular-mask text-center">
  	{{#if item.icon}}
	    {{#link-to "collection" item class="pull-left"}}<img {{bind-attr src=item.icon }}>{{/link-to}}
    {{ else }}
    	{{#if isCollectionOwner }}
    		{{#link-to "collection.edit" item }}<span>edit</span>{{/link-to}}
    	{{/if}}
    	{{#if isPofileOwner }}
    		<span>{{#link-to "settings"}}edit{{/link-to}}</span>
    	{{/if}}
    {{/if}}
    </div>


	{{ follow-btn 
		item=item
		currentUser = targetObject.currentUser
		targetObject = targetObject
        ref_type = "collection"
	}} 
	
</div>