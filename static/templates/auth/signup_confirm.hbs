<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">
			
				<div class="form-group">
					<h2 class="form-signin-heading">Welcome Back</h2>
					<p>We just need a couple more things!</p>
				</div>
				

				{{#if error}}
					<div class="alert">Oops, that did not work out.</div>
				{{/if}}
 	
				{{#form-for model wrapper="bs3-wrapper"}}
	 			<div class="form-group">	
			      		{{input ticket_id as="hidden"}}
			      		{{input user_id as="hidden"}}
					</div> 
		 
			 		<div class="form-group">	
			 			{{input password placeholder="Password"}} 
					</div> 


		 
			 		<div class="form-group">	
			 			{{input firstname placeholder="First Name"}} 
					</div> 


		 
			 		<div class="form-group">	
			 			{{input lastname placeholder="Last Name"}} 
					</div> 


					<div class="form-group">
				  		{{submit class="btn btn-primary btn-block"}}
				  	</div>

				{{/form-for}} 
			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>