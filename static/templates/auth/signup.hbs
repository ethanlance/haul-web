<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">

 
            	<form class="form-horizontal" {{action "submit" on="submit"}}>

					<div class="form-group">
						<h2 class="form-signin-heading">Register With Email</h2>
					</div>

				  {{#if loginFailed}}
				    <div class="alert">Invalid username or password.</div>
				  {{/if}}
				  
				  {{#if isSlowConnection}}
				    <div class="alert alert-info">The request seems to be taking more time than usual, please wait.</div>
				  {{/if}}


				  	<div class="form-group"> 
			      		{{input value=email type="text" class="form-control" placeholder="Type your email address"}}
			      	</div> 

					<div class="form-group">
				  		<button type="submit" class="btn btn-primary btn-block" {{bindAttr disabled="isProcessing"}}>request invite</button>
				  	</div>
				</form> 

			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>
 