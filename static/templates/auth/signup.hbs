<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">




				{{#if error409}}

			    	<div class="alert">
			    		<h2>Oops</h2>
			    		This email is alread registered.  Want to {{#link-to 'login'}}login{{/link-to}} or {{#link-to 'forgotpassword' }}recover your password{{/link-to}}?

			    	</div>

			    {{else}}	
				  	



					{{#if emailRegistrationRequested}}

						<h2 class="form-signin-heading">Please check your email inbox.  We sent you a confirmation email.</h2>

					{{else}}	


						<div class="form-group">
							<h2 class="form-signin-heading">Signup With</h2>
						</div>

						<div class="form-group"> 

							{{ladda-btn 
								name='FACEBOOK'
								btnClasses='btn btn-block btn-facebook ladda-button'
								laddaClick='facebookSignup'
								spin=isProcessing
							}}
 
					    </div> 



						<div class="form-group padding-top">
							<h4 class="">or with email</h4>
						</div>


						{{#if error}}
					    	<div class="alert">Oh no! Something went wrong.</div>
					  	{{/if}} 


	            		{{#form-for model wrapper="bs3-wrapper"}}

						  {{#if submitFailed}}
						    <div class="alert">Oh no, something went wrong.</div>
						  {{/if}} 

						  	<div class="form-group"> 
					      		{{input focus-in="focus" type="text" value=email class="form-control" placeholder="Type your email address"}}
					      	</div> 

							<div class="form-group">
						  		{{submit signup class="btn btn-primary btn-block"}}
						  	</div>
						{{/form-for}}
					{{/if}}

				{{/if}} 

			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>
 