
<div class="row center-block">
	<div class="col-md-4"></div>
	<div class="col-md-4 ">
 		
 

		<form class="form-horizontal" {{action "submit" on="submit"}}>
		  	
			<div class="form-group">
				<h2 class="form-signin-heading">Welcome Back</h2>
				<p>We just need a couple more things!</p>
			</div>
		  



		  {{#if loginFailed}}
		    <div class="alert">Invalid username or password.</div>
		  {{/if}}
		  
		  {{#if isSlowConnection}}
		    <div class="alert alert-info">The request seems to be taking more time than usual, please wait.</div>
		  {{/if}}

 
	 		<div class="form-group">	
	      		{{input value=password type="password" class="form-control" placeholder="Password"}}
			</div> 


 
	 		<div class="form-group">	
	      		{{input value=password type="text" class="form-control" placeholder="First name"}}
			</div> 


 
	 		<div class="form-group">	
	      		{{input value=password type="text" class="form-control" placeholder="Last name"}}
			</div> 


			<div class="form-group">
		  		<button type="submit" class="btn btn-primary btn-block" {{bindAttr disabled="isProcessing"}}>Complete</button>
		  	</div>
 

		</form> 		

	</div>
	<div class="col-md-4"></div>
</div>