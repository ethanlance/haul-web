<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">

			{{#if emailSent}}
				<h2 class="form-signin-heading">
					Please check your email inbox.<br/>
					<small>We sent you instructions to reset your password.</small>
				</h2>

			{{else}}
            	<form class="form-horizontal" >

					<div class="form-group">
						<h2 class="form-signin-heading">
							Forgot Your Password?<br/>
							<small>Enter your email below</small>
						</h2>
					</div> 

				  	<div class="form-group"> 
			      		{{input type="text" value=email class="form-control" placeholder="Type your email address"}}
			      	</div> 

					<div class="form-group">
				  		<button class="btn btn-primary btn-block" {{action "submit"}}>Request</button>
				  	</div>

				</form> 
			{{/if}}

			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>