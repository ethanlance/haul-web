<!-- Header -->
<header>
    <div class="container">
        <div class="row">
        	<div class="col-md-4 "></div>
			<div class="col-md-4 form">

 				<div class="form-group">
					<h2 class="form-signin-heading">Please sign in!</h2>
				</div>

				{{#form-for model wrapper="bs3-wrapper"}}

				  {{#if error}}
				    <div class="alert">Invalid username or password.</div>
				  {{/if}} 

				  	<div class="form-group" >
			      		{{input email placeholder="email address"}}
			      	</div>

			 		<div class="form-group">	
			      		{{input password placeholder="password"}}
					</div> 

					<div class="form-group">
						{{submit class="btn btn-primary btn-block"}}
				  	</div>

				  	<div class="text-right">
				  		<span class="muted">{{#link-to "auth.forgotpassword"}}Forgot Password?{{/link-to}}</span>
				  	</div>

				{{/form-for}} 
			</div>
			<div class="col-md-4"></div>
        </div>
    </div>
</header>