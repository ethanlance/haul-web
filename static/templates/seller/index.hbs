
{{user-header user=user currentUser=currentUser}}


{{!-- PAGE CONTENT --}}
<div class="container">  


			{{!-- UHOH, NO PRODUCTS AT ALL --}}
			{{#unless isProfileOwner}}
			{{#unless this.products }}
				<p class="padding-top text-center haul-font-weak">{{user.name}} has nothing to sell.</p>
			{{/unless}}
			{{/unless}}


			{{!-- CALL TO ACTION --}}
			{{#if isProfileOwner}}
				{{#unless this.products }} 
				{{#link-to 'product-new'}}
				<div class="haul-grid-li">	
					<div class="sell">  
						<div class="sell-button text-center">
							<div class="sell-text text-center haul-font">
									<span class="glyphicon glyphicon-camera"></span><br/>
									Sell Something
							</div>
						</div> 
					</div>
				</div>
				{{/link-to}}
				{{/unless}}

				{{#unless this.products }} 
				{{#link-to 'collection-new' }}
