{{!-- SELLER PROFILE  --}}
<div class="seller-nav haul-font">
	<div class="container content-fixed-nav"> 
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">


				<div class="follow">
					{{ follow-btn 
						item=user 
						ref_type="user"
						currentUser=currentUser   
						hideCounts=true
					}} 
				</div> 			
				   	
				{{ make-icon icon=user.icon isSmall=false class="pull-left" }}
				 	
		     	<h1>{{user.name}}</h1>
	
			
			</div>
		</div>
	</div>
</div>


 
<div class="container">  
	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">


			{{ user-tabs 
				user=this 
				isCollections=true
			}}	

		</div>
	</div>
</div>

 

<div class="toolbar haul-font">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">	

	{{!-- BUTTON  --}}
	{{#if isProfileOwner }} 

			{{#link-to 'seller.new-collection' this.slug }}
			<button type="button" class="selected btn btn-default btn-right">
					<span class="glyphicon glyphicon-plus-sign"></span>
					Create Collection
			</button>
			{{/link-to}} 

			{{!-- {{#link-to 'seller.new-product' this.slug }}	 --}}
			{{#link-to 'product.new' 'product'}}
			<button class="selected btn btn-default btn-right">
				<span class="glyphicon glyphicon-camera"></span>
				Sell Something?
			</button> 
			{{/link-to}}

		
	{{/if}}
			</div>
		</div>
	</div>
</div>



<div class="container"> 

	{{#if this.products }}
	{{#link-to 'seller.products' this.slug}}
	<div class="haul-grid-li">	
		<img class="thumbnail" src="/static/images/blank-thumb.jpg">
		<div class="info">		
			<div class="price">My For Sale??</div>   
		</div>	
	</div>
	{{/link-to}}
	{{/if}}

	{{#if isProfileOwner}}
	{{#unless this.products }} 
	{{#link-to 'product.new' 'product'}}
	<div class="haul-grid-li">	
		<div class="sell">  
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
						Sell Something<br/>
						<span class="glyphicon glyphicon-camera"></span>
				</div>
			</div> 
		</div>
	</div>
	{{/link-to}}
	{{/unless}}
	{{/if}}
	
	

	{{#unless isProfileOwner}}
	{{#unless this.products }}
	<div class="haul-grid-li ">	
		<div class="sell">  
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					
					{{this.name}} had not added anything yet.

				</div>
			</div> 
		</div>
	</div>
	{{/unless}}
	{{/unless}}



	{{!-- USERS PUBLIC COLLECTIONS --}}
	{{#each model.collections }}
		{{#link-to 'collection' collection }}
    	<div class="haul-grid-li"> 

    		{{#if collection.image.small }}
				<img class="thumbnail" {{bind-attr src=collection.image.small}}>
			{{else}}
				<img class="thumbnail" src="/static/images/blank-thumb.jpg">
			{{/if}}

			<div class="info">		
		 	  	<div class="price"> {{ collection_name }}</div>   
			</div>			
	 	</div>
	 	{{/link-to}}
	{{/each}} 
</div> 



