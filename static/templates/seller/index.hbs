{{!-- SELLER PROFILE  --}}



<div class="container content-fixed-nav">
	<div class="row">
		<div class="col-md-12">
	    	{{ profile-seller user=user isProfileOwner=isProfileOwner }}
		</div>
	</div>
</div>	

{{!-- SELLER PRODUCTS --}}

{{#if content}}{{else}}
	{{#if isProfileOwner }}{{else}}
<div class="container">
	<div class="haul-container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h3>{{user.name}} has nothing to sell yet.</h3>
			</div>
		</div>
	</div>
</div>
	{{/if}}
{{/if}}
 
<div class="container">

	{{!-- CREATE STORE  --}}
	{{#if isProfileOwner }}
	{{#if user.market.market_id}}

	<div class="haul-grid-li ">	
		<div class="sell"> 
			{{#link-to 'market' user.market.market_id }}
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					My Store:<br/>	
					{{user.market.market_name}}
				</div>
			</div>
			{{/link-to}}
		</div>
	</div>



	{{else}}
	<div class="haul-grid-li ">	
		<div class="sell"> 
			{{#link-to 'seller.new-market' currentUser.slug }}
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					<div class="glyphicon glyphicon-plus-sign"></div><br/>	
					Start Your Store
				</div>
			</div>
			{{/link-to}}
		</div>
	</div>
	{{/if}}
	{{/if}}
	

	{{!-- SELL SOMETHING  --}}
	{{#if isProfileOwner }}
	<div class="haul-grid-li">	
		<div class="sell"> 
			{{#link-to 'seller.new-product' currentUser.slug }}
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					<div class="glyphicon glyphicon-plus-sign"></div><br/>
					Sell Something
				</div>
			</div>
			{{/link-to}}
		</div>
	</div>
	{{/if}}


	{{!-- SELLER PRODUCTS --}}
    {{#each this}}
    	{{#link-to 'product' this.id }}
    	<div class="haul-grid-li"> 
			<img class="thumbnail" {{bind-attr src=image.small}}>

			{{#if sold}}
				<div class="sold">Sold</div>
			{{/if}}
			
			<div class="info">		
		 	  	<div class="price"> ${{price}}</div>   
			</div>			
	 	</div>
	 	{{/link-to}}	
	{{/each}}
	
</div> 



