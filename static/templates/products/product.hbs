<div class="container">

	<ol class="breadcrumb">
	  <li>{{#link-to 'home'}}Home{{/link-to}}</li>
	  <li>{{#link-to 'products'}}Products{{/link-to}}</li>
	  <li class="active">{{title}}</li>
	</ol>


	<div class="row">
		<div class="col-md-6">
			<h1>{{title}}</h1>
		</div>
		<div class="col-md-2"></div>
		<div class="col-md-4 text-right">
			<button class="btn btn-warning" {{action 'deleteProduct'}}>Preview</button>
		    <button class="btn btn-danger" {{action 'deleteProduct'}}>Delete</button>
		    <button class="btn btn-default" {{action 'saveProduct'}} >Save</button>
		    
		</div>  
	</div>


	<div class="row">
		<div class="col-md-5">
			<div class="row">
				<div class="col-md-12">
					<img class="img-thumbnail" data-src="holder.js/100%x180" alt="...">
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail"  data-src="holder.js/50x50" alt="...">
					<img class="img-thumbnail" data-src="holder.js/50x50" alt="...">
				</div>
			</div>
		</div>

		<div class="col-md-7">

			<div class="form-group">
				<label>Title:</label>
				{{input type="text" name="title" value=title class="form-control"}}


				<label>Description:</label>
				{{textarea value=description name="description" cols="80" rows="6" class="form-control"}}


				<label>Price:</label>
				{{input type="text" name="price" value=price class="form-control"}}


				<label>Quantity:</label>
				{{input type="text" name="title" value=title class="form-control"}}


				<label>Title:</label>
				{{input type="text" name="title" value=title class="form-control"}}


				


