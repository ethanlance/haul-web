
<div class="seller-nav ">
	<div class="container content-fixed-nav">
		<div class="row ">
			<div class="col-md-12 col-sm-12 col-xs-12 text-center haul-font">
				   	
		     	<h1>
		     		{{ make-icon icon=collection.icon isSmall=false isCollection=true }}
		     		<strong>{{collection.name}}</strong> 
		     	</h1>
		     	<small>{{#link-to "seller" collection.user}}by {{collection.user.name}}{{/link-to}}</small>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12 text-center">				 
				<div class="haul-font-weak">
			    	{{ truncate-text text=collection.description }}
				</div>
			</div>
	 	</div>
	</div>	
</div>	
 

 {{!-- TOOLBAR --}}
<div class="toolbar">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">

				<div class="pull-left">
				{{ follow-btn 
					item=collection 
					ref_type="collection"
					currentUser = currentUser  
				}} 
				</div>
			 


				{{!-- EDIT COLLECTION --}}
				{{#if isCollectionOwner }}
				<div class="pull-right">

					{{#link-to 'collection.edit' collection }}
					<button class="btn btn-default">
						Edit Collection
						<span class="glyphicon glyphicon-plus-sign"></span>
					</button>
					{{/link-to}}

				</div>
				{{/if}}
				
			</div>
		</div>
	</div>
</div>


<div class="container">

	{{!-- INFORMATION POD --}}
	{{#link-to "seller" collection.user }}
	<div class="haul-grid-li ">	
		<div class="sell">  
			<div class="sell-button text-center">
				<div class="sell-text text-center haul-font">
					<span class="glyphicon glyphicon-chevron-left"></span>
					Back to Collections
				</div>
			</div> 
		</div>
	</div>
	{{/link-to}}


	{{!-- COLLECTION ITEMS --}} 
    {{#each products}}
    
    	{{#link-to 'collection-product' this.product_id }}
    	<div class="haul-grid-li"> 

				<img class="thumbnail" {{bind-attr src=image.small}}>

				{{#if sold}}
					<div class="sold">Sold</div>
				{{/if}}
				
				<div class="info">		
			 	  	<div class="price"> ${{price}}</div>   
				</div>

				{{!-- {{editorial}} --}}
			
	 	</div>
	 	{{/link-to}}	
    
	{{/each}}
	
</div> 



