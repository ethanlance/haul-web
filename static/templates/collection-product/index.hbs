
<div class="seller-nav haul-font">
	<div class="content-fixed-nav text-center">
     	<h2>
     		<strong>
     			{{#link-to "collection" collection}}{{model.collection.name}}{{/link-to}}
     		</strong> 
     	</h2>
	     <small>{{#link-to "seller" collection.user}}by {{model.collection.user.name}}{{/link-to}}</small>
	</div>	
</div>	


<div class="toolbar haul-font">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">	


				{{#link-to 'collection' collection}}
				<button class="btn btn-default pull-left">
					<span class="glyphicon glyphicon-chevron-left"></span>
					Back To Collection
				</button>
				{{/link-to}}
				 
				{{#if isCollectionOwner}} 
					<button class="btn btn-default pull-right">
						Edit Your Post
						<span class="glyphicon glyphicon-plus-sign"></span>
					</button> 
				{{/if}}
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">

		{{!-- Images  --}}

		<div class="col-md-6 col-sm-12 col-xs-12 padding-bottom">

			{{#if model.product }}
				{{#if model.product.images }}
					{{view Haul.CarouselView contentBinding="model.product.images"}}
				{{/if}}
			{{/if}}
		</div>

		{{!-- Product Info --}}

		<div class="col-md-6 col-sm-12 col-xs-12">

			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<h1>{{ model.product.name }}</h1>
				</div>
			</div>

			<div class="row">

				<div class="col-md-12 haul-buy-card">


					
					{{!-- BUTTONS  --}}


					<div class="row button-bar"> 
						<div class="col-md-12 col-sm-12 col-xs-12">

							
							<div class="box-rigid lead haul-price">${{model.product.price}}</div>		
							
							{{!-- BUY --}}
							<button type="button" class="btn btn-primary btn-responsive">BUY</button>

							{{!-- LIKE --}}
							{{like-btn
								class="display-inline" 
								item=model.product
								currentUser=currentUser 									
							}}

							{{!-- COMMENT --}}
							{{comment-btn
								class="display-inline"
								contextObject=model.collection
								itemObject=model.product 
								currentUser=currentUser
							}}
							

							{{!-- CURATE - ADD TO STORE --}}
							{{#unless isCollectionOwner }}
								{{collection-btn
									class="display-inline" 
									currentUser=currentUser 
									product=model.product
									productPage=true
								}}
							{{/unless}}

						</div>

					</div>

					{{ product-details seller=model.product.user product=model.product }}

				</div>
			</div>
		</div>



		<div class="col-md-6 col-sm-12 col-xs-12">
			<div class="row">
				<div class="col-md-12 haul-buy-card">

					<div class="row">
						<div class="col-md-6">
							<span class="haul-font"><strong>{{ model.collection.name }} says:</strong></span>
						</div>
					</div>
					
					<div class="row">
						<div class="col-md-12">	
							{{!-- MARKET INFO --}}
							{{ breaklines model.editorial }}
		    			</div>
		    		</div>
		    	</div>
		    </div>
		</div>
 	</div>

		{{!-- COMMENTS --}}
	<div class="row">
		<div class="col-md-12">
			{{ comment-section
				contextObject=model.collection
				itemObject=model.product 
				currentUser=currentUser
			}}
		</div> 
	</div>
</div>

<div id="deleteModal" class="modal fade bs-example-modal-sm in danger" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="mySmallModalLabel">Delete?<br/>This cannot be undone</h4>
		</div>
		<div class="modal-body"> 
			<p class="text-center">
				<button {{action 'deleteCancel'}} class="btn btn-default">Cancel</button>
				<button {{action 'deleteProceed'}} class="btn btn-danger">Yes, Delete</button>
			</p>
		</div>
		</div>
	</div>
</div>

















