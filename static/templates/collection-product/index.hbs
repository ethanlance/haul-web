


<div class="container content-fixed-nav">
	<div class="row">
		<div class="col-md-6 col-sm-6 col-xs-12 haul-font">
			
			<div class="pull-left seller-nav">
				{{#link-to 'collection' model.collection}}
					{{ make-icon icon=model.collection.icon isSmall=true class="pull-left" }}
					{{ model.collection.name }}
				{{/link-to}}
				<h1>{{ model.product.name }}</h1>
			</div>
			 
		</div>  
		<div class="col-md-6 col-sm-6 col-xs-12 haul-font padding-top text-right">

			{{#if isCollectionOwner}} 
				<button class="btn btn-default">
					Edit Your Post
					<span class="glyphicon glyphicon-plus-sign"></span>
				</button> 
			{{/if}}

		</div>
	</div>
</div>	

<div class="toolbar"><span></span></div>

<div class="container">
	<div class="row">

		{{!-- Images  --}}

		<div class="col-md-6 col-sm-12 col-xs-12 padding-bottom">
			{{#if model.product }}
				{{#if model.product.images }}
					{{view Haul.CarouselView contentBinding="model.product.images"}}
				{{/if}}
			{{/if}}
		</div>

		{{!-- Product Info --}}

		<div class="col-md-6 col-sm-12 col-xs-12">
			<div class="row">
				<div class="col-md-12 haul-buy-card">
					
					{{!-- BUTTONS  --}}


					<div class="row button-bar"> 
						<div class="col-md-12 col-sm-12 col-xs-12">
							
							<div class="box-rigid lead haul-price">${{model.product.price}}</div>		
							
							{{!-- BUY --}}
							<button type="button" class="btn btn-primary btn-responsive">BUY</button>

							{{!-- LIKE --}}
							{{like-btn
								class="display-inline" 
								item=model.product
								currentUser=currentUser 									
							}}

							{{!-- COMMENT --}}
							{{comment-btn
								class="display-inline"
								contextObject=model.collection
								itemObject=model.product 
								currentUser=currentUser
							}}
							

							{{!-- CURATE - ADD TO STORE --}}
							{{#unless isCollectionOwner }}
								{{collection-btn
									class="display-inline" 
									currentUser=currentUser 
									product=model.product
									productPage=true
								}}
							{{/unless}}

						</div>

					</div>

					{{ product-details seller=model.product.user product=model.product }}

				</div>
			</div>
		</div>



		<div class="col-md-6 col-sm-12 col-xs-12">
			<div class="row">
				<div class="col-md-12 haul-buy-card">

					<div class="row">
						<div class="col-md-6">
							<span class="haul-font"><strong>{{ model.collection.name }} says:</strong></span>
						</div>
					</div>
					
					<div class="row">
						<div class="col-md-12">	
							{{!-- MARKET INFO --}}
							{{ breaklines model.editorial }}
		    			</div>
		    		</div>
		    	</div>
		    </div>
		</div>
 	</div>

		{{!-- COMMENTS --}}
	<div class="row">
		<div class="col-md-12">
			{{ comment-section
				contextObject=model.collection
				itemObject=model.product 
				currentUser=currentUser
			}}
		</div> 
	</div>
</div>

<div id="deleteModal" class="modal fade bs-example-modal-sm in danger" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="mySmallModalLabel">Delete?<br/>This cannot be undone</h4>
		</div>
		<div class="modal-body"> 
			<p class="text-center">
				<button {{action 'deleteCancel'}} class="btn btn-default">Cancel</button>
				<button {{action 'deleteProceed'}} class="btn btn-danger">Yes, Delete</button>
			</p>
		</div>
		</div>
	</div>
</div>

















