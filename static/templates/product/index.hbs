




<div class="container content-fixed-nav">
	<div class="row">
		<div class="col-md-6 padding-bottom">
	    	{{ profile-seller user=user }}
		</div>


		<div class="col-md-6 padding-bottom text-right">

			{{!-- HAUL TOOLBAR --}}
			{{#if currentUser }}
				{{product-to-market 
					class="display-inline" 
					currentUser=currentUser 
					product=model
				}}
			{{/if}}

			{{#if isProfileOwner}}
				{{#link-to 'product.edit' this}}<button class="btn btn-default"  {{bs-bind-tooltip content="Edit your item"}}>Edit</button>{{/link-to}}
				<button {{action 'delete'}}  {{bs-bind-tooltip content="Delete your item"}} class="btn btn-danger">Delete</button>
			{{/if}}

		</div>
	</div>

	
	<div class="row">

		{{!-- Images  --}}

		<div class="col-md-6 col-sm-12 col-xs-12">
			{{#if model.images}}
				{{view Haul.CarouselView contentBinding="model.images"}}
			{{/if}} 
		</div>

		{{!-- Product Info --}}

		<div class="col-md-6 col-sm-12 col-xs-12">
			<div class="row">
				<div class="col-md-12 haul-buy-card">
					
					{{!-- BUTTONS  --}}

					<div class="row"> 
						<div class="col-md-12 col-sm-12 col-xs-12 title">
							{{ name }}
						</div>
					</div>
					<div class="row button-bar"> 
						<div class="col-md-12 col-sm-12 col-xs-12">
							<span class="lead haul-price">${{ price }}</span>
							
							{{!-- BUY --}}
							<button type="button" class="btn btn-primary btn-lg">BUY</button>

							{{!-- LIKE --}}
							{{like-btn
								class="display-inline" 
								item=model
								currentUser=currentUser 									
							}}

							{{!-- COMMENT --}}
							<button type="button" class="btn btn-default btn-lg" {{bs-bind-tooltip content="Comment on This!"}}>4 <span class="glyphicon glyphicon-comment"></span>
							</button>

						</div>
					</div>

					{{!-- PRODUCT INFO --}}

					<div class="row">
						<div class="col-md-12">
    						{{ breaklines description }}
						</div>
					</div> 
				</div>

 

				{{!-- COMMENTS --}}
				<div class="col-md-12 haul-buy-card">
					<div class="row">
						<div class="col-md-12">
						<h4>Comments</h4>

						{{textarea value=message name="message" cols="80" rows="3" class="form-control"}}
							<div class="text-right padding-top">
								<button class="btn btn-default">post</button>
							</div>
						</div>
					</div>
				</div>



			</div>
		</div> 
	</div>
</div>

<div id="deleteModal" class="modal fade bs-example-modal-sm in danger" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="mySmallModalLabel">Delete?<br/>This cannot be undone</h4>
		</div>
		<div class="modal-body"> 
			<p class="text-center">
				<button {{action 'deleteCancel'}} class="btn btn-default">Cancel</button>
				<button {{action 'deleteProceed'}} class="btn btn-danger">Yes, Delete</button>
			</p>
		</div>
		</div>
	</div>
</div>

















