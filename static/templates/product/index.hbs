{{oulet}}

<div class="container">
	

	<div class="row">
	 	<div class="col-md-6">
			<ol class="breadcrumb haul-icon-support">
			  	<li >
			  		{{#link-to 'products' user }}
			  		<div class="profile-small-circular-mask">
						<img {{bind-attr src=user.picture}}> 
				 	</div>
				 	{{user.name}}
					{{/link-to}}
				</li>
			  <li class="active">{{name}}</li>
			</ol>
		</div>
		<div class="col-md-6">
			{{#if isProfileOwner }}
				{{#link-to 'product.edit' this}}<button class="btn btn-default">Edit</button>{{/link-to}}
			{{/if}}
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<h1>{{name}}</h1>
		</div>
	</div>


	<div class="row">
		<div class="col-md-6">

		{{#if imagez }}
			{{view Haul.CarouselView contentBinding="imagez"}}
 		{{/if}}
 		
		</div>

		<div class="col-md-6">

			<div class="row haul-buy-card">

				<div class="col-md-12">
					
					<div class="row button-bar">
						
						<div class="col-md-4 col-xs-6">
							<span class="lead haul-price">${{ price }}</span>
							<button type="button" class="btn btn-primary btn-lg">BUY</button>
						</div>

						<div class="col-md-8 col-xs-6">

							<div class="row">
								<div class="col-md-12 text-right">
									

									<button type="button" class="btn btn-default btn-lg" {{ action 'likeProduct'}} {{bs-bind-tooltip content="Like This!"}}>
									  <span class="glyphicon glyphicon-heart"></span>
									</button>	

									<button type="button" class="btn btn-default btn-lg" { action 'shareProduct'}} {{bs-bind-tooltip content="Share This!"}}>
									  <span class="glyphicon glyphicon-share"></span>
									</button>							

									{{#link-to 'product.comments' this}}
									<button type="button" class="btn btn-default btn-lg" {{bs-bind-tooltip content="Comment on This!"}}>
									  <span class="glyphicon glyphicon-comment"></span>
									</button>
									{{/link-to}}

							
									<div class="haul-counts">
									<div class="row">
										<div class="col-md-12"><small><strong>12</strong> people like this</small></div>
									</div>	
									<div class="row">
										<div class="col-md-12"><small><strong>{{commentCount}}</strong> comments</small></div>
									</div>
									</div>

								</div>
							</div> 
						</div> 
					</div>

					<div class="row">
						<div class="col-md-12">
							

							<span class="haul-font"><strong>From The Seller:</strong></span>
							
							<div class="media">

								<div class="pull-left">

									<div class="profile-small-circular-mask">
		    							<img {{bind-attr src=user.picture}}> 
		    						</div>
		    						<br/>
		    						{{ user.name }} 
	    						</div>
	    					
		    					 <div class="media-body">{{ description }}</div>
		    				</div> 
						</div>
					</div>
				</div>
			</div>
		</div> 
	</div>

 
 

</div>
















