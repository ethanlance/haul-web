{{!-- HEADER --}}
<div class="seller-nav haul-font">
	<div class="content-fixed-nav text-center">
     	<h2>
     		<strong>
     			{{#link-to "seller.products" model.user}}My For Sale{{/link-to}}
     		</strong> 
     	</h2>
	     <small>{{#link-to "seller" model.user}}by {{model.user.name}}{{/link-to}}</small>
	</div>	
</div>	


{{!-- TOOLBAR --}}
<div class="toolbar haul-font">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">	

				{{#link-to 'seller.products' model.user}}
				<button class="btn btn-default ">
					<span class="glyphicon glyphicon-chevron-left"></span>
					Back To Collection
				</button>
				{{/link-to}}

				{{#if isProfileOwner}}
				<div class="pull-right">
					<button {{action 'delete'}}  {{bs-bind-tooltip content="Delete your item"}} class="btn btn-danger">
						Delete
					</button>
					{{#link-to 'product.edit' this}}
						<button class="btn btn-default"  {{bs-bind-tooltip content="Edit your item"}}>
							Edit
						</button>
					{{/link-to}}
				</div>
				{{/if}}
			
			</div>
		</div>
	</div>
</div>



{{!-- PAGE CONTENT --}}
<div class="container">
	<div class="row"> 
		<div class="col-md-6 col-sm-6 col-xs-12 padding-bottom">

			{{!-- IMAGES --}}
			{{#if model.images}}
				{{view Haul.CarouselView contentBinding="model.images"}}
			{{/if}} 



			{{!-- COMMENTS --}}
			{{ comment-section
				contextObject=model.user
				itemObject=model
				currentUser=currentUser
			}}

		</div>
		<div class="col-md-6 col-sm-6 col-xs-12">
			<div class="haul-buy-card">
				
				{{!-- PRODCUT NAME --}}
				<h3 class="haul-font text-center bottom-border">{{ model.name }}</h3> 

				{{!-- BUTTONS --}}
				<div class="bottom-border padding-bottom">
					<div class="btn-left haul-price">${{model.price}}</div>	 	
						
					{{!-- BUY --}}
					<button type="button" class="btn btn-primary btn-responsive">BUY</button>

					{{!-- LIKE --}}
					{{like-btn
						class="display-inline" 
						item=model
						currentUser=currentUser 									
					}}

					{{!-- COMMENT --}}
					{{comment-btn
						class="display-inline"
						contextObject=model.user
						itemObject=model
						currentUser=currentUser
					}}
					

					{{!-- CURATE - ADD TO STORE --}}
					{{#unless isProductOwner }}
						{{collection-btn
							class="display-inline" 
							currentUser=currentUser 
							product=model
							productPage=true
						}}
					{{/unless}}
				</div>



				<div class="clearfix padding-top">
					
					<h4 class="pull-left">Seller</h4>
					
					<span class="pull-left">
						{{#link-to "seller" model.user.slug}}
							{{ make-icon icon=model.user.icon isSmall=true  }}
						{{/link-to}}
					</span>
					
					{{#link-to "seller" model.user.slug}}{{model.user.name}}{{/link-to}}
					
					{{ follow-btn 
						item=model.user 
						ref_type="user"
						currentUser = currentUser  
						isSmall=true
						hideCounts=true
					}}  

				</div>
	 
				<h4 class="top-border padding-top">Details:</h4>
				<p>{{ breaklines model.description }}</p>

			</div>
		</div>
	</div>
</div>


<div id="deleteModal" class="modal fade bs-example-modal-sm in danger" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title" id="mySmallModalLabel">Delete?<br/>This cannot be undone</h4>
		</div>
		<div class="modal-body"> 
			<p class="text-center">
				<button {{action 'deleteCancel'}} class="btn btn-default">Cancel</button>
				<button {{action 'deleteProceed'}} class="btn btn-danger">Yes, Delete</button>
			</p>
		</div>
		</div>
	</div>
</div>

















